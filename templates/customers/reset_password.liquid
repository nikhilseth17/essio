<section class="page-content-body">
  <div class="container">
    {% layout settings.customer_layout %}
    <div id="customer-login" class="center-panels">
      <div class="row">
        <div id="login" class="col-md-4">
          <div class="panel login-panel" id="customer-reset-password">
            <div class="panel-body">
              <h2 class="title">Reset Password</h2>




              {% form 'reset_customer_password' %}
              {{ form.errors | default_errors }}

              <label class="label" for="password">Password</label>
              <input type="password" value="" name="customer[password]" id="customer_password" class="text form-control" size="16" placeholder="Password" />
              
              <label class="label" for="password_confirmation">Password Confirmation</label>
              <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="text form-control" size="16" placeholder="Password Confirmation" />
              
              <div class="action_bottom">
                <input class="btn btn-primary" type="submit" value="Reset Password" />
              </div>
              {% endform %}


            </div>
          </div>
        </div>




      </div>
    </div>
  </div>
</section>