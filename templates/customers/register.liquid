<section class="page-content-body">
  <div class="container">
{% layout settings.customer_layout %}

<div id="customer-register">
  <div class="row center-panels">
    <div id="register" class="col-md-4">
    	<div class="panel">
    		<div class="panel-body">
		      <h2 class="title">Create Account</h2>

			    {% form 'create_customer' %}
			
			      {{ form.errors | default_errors }}

			      <div id="first_name" class="clearfix large_form">
			        <label for="first_name" class="label">First Name</label>
			        <input type="text" value="" name="customer[first_name]" id="first_name" class="text form-control" size="30" placeholder="First Name" />
			      </div>

			      <div id="last_name" class="clearfix large_form">
			        <label for="last_name" class="label">Last Name</label>
			        <input type="text" value="" name="customer[last_name]" id="last_name" class="text form-control" size="30" placeholder="Last Name" />
			      </div>

			      <div id="email" class="clearfix large_form">
			        <label for="email" class="label">Email Address</label>
			        <input type="email" value="" name="customer[email]" id="email" class="text form-control" size="30" c placeholder="Email" />
			      </div>

			      <div id="password" class="clearfix large_form">
			        <label for="password" class="label">Password</label>
			        <input type="password" value="" name="customer[password]" id="password" class="password text form-control" size="30" placeholder="Password" />
			      </div>

			      <div class="action_bottom">
			        <button class="btn btn-primary">Create</button>
			        <span class="note">or <a href="{{ shop.url }}">Return to Store</a></span>
			      </div>
			
			    {% endform %}
			</div>
		</div>
        
    </div><!-- #register -->

    <div class="col-md-4">
    	<div class="panel">
    		<div class="panel-body">
    			<h2>Already have an account?</h2>
    			<a href="/account/login/" class="btn btn-primary">Login Here</a>
    		</div>
    	</div>
    </div>
  </div><!-- .row -->
</div><!-- #customer-register -->
</div>
</section>
