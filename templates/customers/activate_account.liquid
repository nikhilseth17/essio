<section class="page-content-body">
  <div class="container">
{% layout settings.customer_layout %}
    <div id="customer-activate" class="center-panels">
      <div class="row">
        <div id="login" class="col-md-4">
          <div class="panel login-panel">
            <div class="panel-body">
              <h1>Activate Account</h1>
              <p class="note create-password">Create your password to activate your account</p>

              {% form 'activate_customer_password' %}
              {{ form.errors | default_errors }}

              <label class="label" for="password">Password</label>
              <input type="password" value="" name="customer[password]" id="customer_password" class="text form-control" size="16" placeholder="Password" />

              <label class="label" for="password_confirmation">Password Confirmation</label>
              <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="text form-control" size="16" placeholder="Password Confirm" />

              <div class="action_bottom">
                <input class="btn btn-primary" type="submit" value="Activate Account" />
                <div class="note text-center">or</span>
                <a class="btn btn-default" href="/">Decline Invitation</a>
              </div>
              {% endform %}
          </div>
          </div>
        </div>
      </div>
    </div>
 

</div>
</section>